local function createShadow(parent)
    for i = 1, 5 do -- Create 5 frames with decreasing transparency to simulate a shadow
        local shadowFrame = Instance.new("Frame")
        shadowFrame.Name = "Shadow" .. i
        shadowFrame.Parent = parent
        shadowFrame.BackgroundColor3 = Color3.new(0, 0, 0)
        shadowFrame.BorderSizePixel = 0
        shadowFrame.ZIndex = 0
        shadowFrame.Size = UDim2.new(1, 10, 1, 10)
        shadowFrame.Position = UDim2.new(0, -5 * i, 0, -5 * i)
        shadowFrame.BackgroundTransparency = 0.2 + (i * 0.15) -- Increasing transparency
    end
end

local function createWindow()
    local screenGui = Instance.new("ScreenGui")
    screenGui.Parent = game.Players.LocalPlayer:WaitForChild("PlayerGui")
    
    local window = Instance.new("Frame", screenGui)
    window.Name = "ShydeHubWindow"
    window.BackgroundColor3 = Color3.fromRGB(44, 44, 44)
    window.BorderSizePixel = 0
    window.Size = UDim2.new(0, 300, 0, 200)
    window.Position = UDim2.new(0.5, -150, 0.5, -100)
    window.ZIndex = 1

    createShadow(window)

    local title = Instance.new("TextLabel", window)
    title.Name = "Title"
    title.BackgroundColor3 = Color3.fromRGB(35, 35, 35)
    title.Size = UDim2.new(1, 0, 0, 24)
    title.Font = Enum.Font.GothamBold
    title.Text = "Shyde Hub"
    title.TextColor3 = Color3.fromRGB(255, 255, 255)
    title.TextSize = 18
    title.ZIndex = 2

    local closeButton = Instance.new("TextButton", title)
    closeButton.Name = "CloseButton"
    closeButton.Text = "X"
    closeButton.BackgroundColor3 = Color3.fromRGB(35, 35, 35)
    closeButton.TextColor3 = Color3.fromRGB(255, 255, 255)
    closeButton.Size = UDim2.new(0, 24, 1, 0)
    closeButton.Position = UDim2.new(1, -24, 0, 0)
    closeButton.Font = Enum.Font.Gotham
    closeButton.TextSize = 18
    closeButton.ZIndex = 2

    closeButton.MouseButton1Click:Connect(function()
        screenGui:Destroy()
    end)
end

createWindow()
